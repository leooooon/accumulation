














/*每个页面公共css */
page{
	-one-title-color:#303133; /* - 一级信息 标题 */
	--ordinary-text-color:#606266; /*普通文字*/
	--secondary-text-color:#909399; /*次要信息*/
	--describe-text-color:#bfc2cc;/*描述信息*/
}
page{
	padding: 0 20rpx;
	background-color: f9f9f9;
	box-sizing: border-box;
}
view{
	box-sizing: border-box;
}
view text{
	font-family:PingFang SC;
	font-weight:500;
}
.content{
	margin: 0 auto;
}
.fr{
	float: right;
}
.layout{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
/* 次要信息 */
.secondary-text{
	color: var(--secondary-text-color);
	font-size: 24rpx;
}
.one-title{
	color: var(--one-title-color);
	font-size: 32rpx;
	font-weight:bold;
}
.dele {
		text-decoration: line-through;
}
image{
	width: 100%;
	height: 100%;
}


