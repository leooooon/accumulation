
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.item {
	width: 344rpx;
	margin: 20rpx 0;
}
.hotel-image {
	width: 100%;
	height: 205rpx;
}
.hotel-name,
.score {
	margin-right: 11rpx;
}
.bottom-box {
	padding-left: 15rpx;
}
.score {
	position: relative;
}
.w-line {
	position: absolute;
	bottom: 0rpx;
	width: 52rpx;
	height: 8rpx;
	background-color: #FFDC2E;
}
.price {
	font-size: 38rpx;
	color: #FF4E3C;
}
.qi,
.delel {
	color: #ccc;
	font-size: 24rpx;
	margin-right: 20rpx;
}
.price-icon image {
	width: 116rpx;
	height: 27rpx;
}
.price-icon {
	margin-left: 4rpx;
	margin-top: -10rpx;
}
.hotel-box {
	line-height: 46rpx;
}

/* popup */
.popup-content {
	padding-bottom: 55rpx;
	display: block;
	background-color: #fff;
	border-radius: 16rpx 16rpx 0 0;
}
.title-box {
	position: relative;
	height: 95rpx;
	text-align: center;
	border-bottom: 1px solid#EAEAEA;
	line-height: 95rpx;
}
.close image {
	position: absolute;
	right: 52rpx;
	top: 34rpx;
	width: 30rpx;
	height: 30rpx;
}
.center-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	height: 204rpx;
	padding: 0 50rpx;
	border-bottom: 1px solid#EAEAEA;
}
.center {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.basefont {
	font-size: 32rpx;
	font-weight: bold;
	color: #222;
}
.special {
	color: #FF4E3C;
	font-size: 28rpx;
	font-weight: bold;
}
.bottom-describe{
	padding: 0 50rpx;
	color: #606266;
	font-size: 28rpx;
	text-align: justify;
}
.hotel-btn{
	width: 590rpx;
	height: 100rpx;
}
.btn-box{
	text-align: center;
	margin-top: 50rpx;
}
.bottom-price{
	padding-top:30rpx ;
	height: 96rpx;
}
.bottom-title{
	line-height: 60rpx;
}

